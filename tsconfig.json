{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["./api/*"],
      "@icons/*": ["./assets/icons/*"],
      "@img/*": ["./assets/img/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@hooks/*": ["./hooks/*"],
      "@app/*": ["./app/*"],
      "@stores/*": ["./stores/*"],
      "@theme/*": ["./theme/*"],
      "@interfaces/*": ["./common/interfaces/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
